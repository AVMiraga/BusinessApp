@using BusinessApp.Core.Entities
@model Dictionary<string,string>

<form method="post" enctype="multipart/form-data">
    @foreach (var item in Model)
    {
        if(item.Key == "Logo")
        {
            <div class="mb-3">
                <label class="form-label">Logo</label>
                <input type="file" name="file" class="form-control">
            </div>
        }
        else
        {
            <div class="mb-3">
                <label asp-for="@Model[item.Key]" class="form-label">@item.Key.ToString()</label>
                <input asp-for="@Model[item.Key]" class="form-control">
            </div>
        }
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button asp-action="Index" class="btn btn-secondary">Cancel</button>
</form>